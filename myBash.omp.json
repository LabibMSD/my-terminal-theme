{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "alignment": "left",
      "segments": [
        {
          "foreground": "white",
          "style": "powerline",
          "template": "\n {{ .Icon }} ",
          "type": "os"
        },
        {
          "type": "path",
          "style": "powerline",
          "foreground": "lightGreen",
          "properties": {
            "style": "agnoster_full",
            "home_icon": "home",
            "folder_separator_icon": " </><white>\u276f</> "
          },
          "template": "{{ .Path }}"
        },
        {
          "foreground": "#e07638",
          "style": "plain",
          "template": " <white>::<white> (</>{{ .HEAD }}</><white>)<white>",
          "type": "git"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "right",
      "segments": [
        {
          "foreground": "white",
          "properties": {
            "display_mode": "files",
            "fetch_package_manager": true,
            "fetch_version": true,
            "npm_icon": "npm",
            "yarn_icon": "yarn"
          },
          "style": "plain",
          "template": " {{ if .PackageManagerIcon }}{{ .PackageManagerIcon }} {{ end }}{{ .Full }}",
          "type": "node"
        },
        {
          "foreground": "white",
          "properties": {
            "display_mode": "context",
            "fetch_virtual_env": false
          },
          "style": "plain",
          "template": " python {{ if .Error }}{{ .Error }}{{ else }}{{ .Full }}{{ end }}",
          "type": "python"
        },
        {
          "foreground": "white",
          "properties": {
            "display_mode": "context",
            "fetch_virtual_env": false
          },
          "style": "plain",
          "template": " php {{ if .Error }}{{ .Error }}{{ else }}{{ .Full }}{{ end }}",
          "type": "php"
        },
        {
          "foreground": "white",
          "properties": {
            "display_mode": "context",
            "fetch_virtual_env": false
          },
          "style": "plain",
          "template": " java {{ if .Error }}{{ .Error }}{{ else }}{{ .Full }}{{ end }}",
          "type": "java"
        },
        {
          "foreground": "lightGreen",
          "style": "plain",
          "template": " {{ .CurrentDate | date \"15</><white>:</>04</><white>:</>05\" }} ",
          "type": "time"
        }        
      ],
      "type": "prompt"
    },
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "foreground": "white",
          "foreground_templates": [
            "{{ if gt .Code 0 }}red{{ end }}"
          ],
          "properties": {
            "always_enabled": true
          },
          "style": "powerline",
          "template": " \u279c ",
          "type": "status"
        }
      ],
      "type": "prompt"
    }
  ],
  "version": 3
}
